{
    "openapi": "3.0.1",
    "info": {
        "title": "OpenAPI definition",
        "version": "v0"
    },
    "servers": [
        {
            "url": "http://localhost:8083",
            "description": "Recommendation open api specification"
        }
    ],
    "paths": {
        "/recommendation": {
            "post": {
                "tags": [
                    "recommendation-controller"
                ],
                "description": "This will return a list of recommended resources for a given set of resources",
                "operationId": "getRecommendations",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "The Authorization header is mandatory and its valid must be provide JWT token in the form: Authorization: Bearer + <token>",
                        "required": true,
                        "content": {
                            "*/*": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RecommendationInputDto"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "*/*": {
                                "schema": {
                                    "uniqueItems": true,
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/RecommendationOutputDto"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "RecommendationInputDto": {
                "type": "object",
                "properties": {
                    "currentResources": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ResourceDto"
                        }
                    },
                    "userInterests": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/UserInterestDto"
                        }
                    },
                    "userSkills": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/UserSkillDto"
                        }
                    }
                }
            },
            "ResourceDto": {
                "type": "object",
                "properties": {
                    "resourceMetadata": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    }
                }
            },
            "UserInterestDto": {
                "type": "object",
                "properties": {
                    "interestId": {
                        "type": "string"
                    },
                    "interestData": {
                        "type": "string"
                    }
                }
            },
            "UserSkillDto": {
                "type": "object",
                "properties": {
                    "skillId": {
                        "type": "string"
                    },
                    "skillData": {
                        "type": "string"
                    }
                }
            },
            "RecommendationOutputDto": {
                "type": "object",
                "properties": {
                    "recommendationResource": {
                        "type": "string"
                    }
                }
            }
        }
    }
}